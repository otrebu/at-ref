{
  "name": "at-ref",
  "displayName": "At Ref",
  "description": "Navigate and validate @path/to/file references in markdown files (Claude Code companion)",
  "version": "1.0.1",
  "publisher": "otrebu",
  "license": "MIT",
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/otrebu/at-ref"
  },
  "bugs": {
    "url": "https://github.com/otrebu/at-ref/issues"
  },
  "homepage": "https://github.com/otrebu/at-ref#readme",
  "galleryBanner": {
    "color": "#0d1117",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Linters"
  ],
  "keywords": [
    "claude",
    "claude-code",
    "markdown",
    "reference",
    "navigation"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "atReference.compileFile",
        "title": "Compile @References",
        "category": "At Reference"
      },
      {
        "command": "atReference.compileFolder",
        "title": "Compile @References in Folder",
        "category": "At Reference"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "atReference.compileFile",
          "when": "resourceLangId == markdown",
          "group": "atReference@1"
        }
      ],
      "explorer/context": [
        {
          "command": "atReference.compileFile",
          "when": "resourceLangId == markdown",
          "group": "atReference@1"
        },
        {
          "command": "atReference.compileFolder",
          "when": "explorerResourceIsFolder",
          "group": "atReference@2"
        }
      ],
      "editor/title/context": [
        {
          "command": "atReference.compileFile",
          "when": "resourceLangId == markdown",
          "group": "atReference@1"
        }
      ]
    },
    "configuration": {
      "title": "At Ref",
      "properties": {
        "atReference.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Show errors for invalid @ references"
        },
        "atReference.enableCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Enable file path autocomplete when typing @"
        },
        "atReference.enableHover": {
          "type": "boolean",
          "default": true,
          "description": "Show file preview on hover"
        },
        "atReference.enableFolding": {
          "type": "boolean",
          "default": true,
          "description": "Enable code folding for <file> tags in markdown"
        },
        "atReference.enableFileTagDecorations": {
          "type": "boolean",
          "default": true,
          "description": "Highlight <file> tags with colored borders showing nesting depth"
        },
        "atReference.exclude": {
          "type": "array",
          "default": [
            "**/node_modules/**",
            "**/.git/**"
          ],
          "description": "Patterns to exclude from completion suggestions"
        },
        "atReference.previewLines": {
          "type": "number",
          "default": 10,
          "description": "Number of lines to show in hover preview"
        },
        "atReference.compile.optimizeDuplicates": {
          "type": "boolean",
          "default": true,
          "description": "Include each file once, use self-closing tags for duplicate references"
        }
      }
    }
  },
  "scripts": {
    "build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --sourcemap && vsce package --no-dependencies",
    "watch": "pnpm build --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "package": "vsce package --no-dependencies",
    "vscode:prepublish": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --sourcemap"
  },
  "devDependencies": {
    "@types/node": "^20.19.25",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.19.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@u-b/at-ref": "workspace:*"
  }
}
